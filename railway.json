{
  "$schema": "https://railway.com/railway.json",
  "build": {
    "builder": "NIXPACKS",
    "python": {
      "version": "3.11",
      "lockfileVersion": 2
    }
  },
  "deploy": {
    "startCommand": "python3 polymarket_telegram_bot.py",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicy": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
